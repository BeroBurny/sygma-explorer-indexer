// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

model Transfer {
  id          String    @id @default(dbgenerated()) @map("_id") @db.ObjectId
  uuid  String @default(uuid()) @map("uuid")  
  depositNonce Int @unique
  resourceId String
  fromChainId Int
  fromNetworkName String
  toChainId Int
  toNetworkName String

  fromAddress String?
  toAddress String?
  tokenAddress String?
  amount String?
  timestamp Int?
  depositTransactionHash String? @unique
  depositBlockNumber Int?

  status Int @default(1)

  sourceTokenAddress String? 
	destinationTokenAddress String?
  
  proposalEvents ProposalEvent[]
  voteEvents VoteEvent[]
}

model ProposalEvent {
  id      String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  proposalStatus Int
  dataHash String?
  proposalEventTransactionHash String?
  proposalEventBlockNumber Int
  timestamp Int
  transfer  Transfer?    @relation(fields: [transferId], references: [id])
  transferId  String     @db.ObjectId

  by String
}

model VoteEvent {
  id      String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  voteBlockNumber Int
  voteTransactionHash String?
  dataHash String?
  timestamp Int
  voteStatus Boolean
  transfer  Transfer?    @relation(fields: [transferId], references: [id])
  transferId  String     @db.ObjectId

  by String
}
