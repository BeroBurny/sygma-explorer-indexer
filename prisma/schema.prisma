// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

model Transfer {
  id          String    @id @default(dbgenerated()) @map("_id") @db.ObjectId
  depositNonce Int @unique
  resourceId String
  fromChainId Int
  fromNetworkName String
  toChainId Int
  toNetworkName String

  fromAddress String?
  toAddress String?
  tokenAddress String?
  amount BigInt?
  timestamp Int?
  depositTransactionHash String?
  depositBlockNumber Int?

  by String? @default("0x66547208290094373f020b53465D742Ca73333F6")

  sourceTokenAddress String? @default("0x00547208290094373f020b53465D742Ca73333F6")
	destinationTokenAddress String? @default("0x01547208290094373f020b53465D742Ca73333F6")
  
  proposals Proposal[]
  votes Vote[]
}

model Proposal {
  id      String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  proposalStatus Int
  dataHash String?
  proposalEventTransactionHash String?
  proposalEventBlockNumber Int
  timestamp Int
  transfer  Transfer?    @relation(fields: [transferId], references: [id])
  transferId  String     @db.ObjectId

  by String? @default("0x66547208290094373f020b53465D742Ca73333F6")
}

model Vote {
  id      String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  voteBlockNumber Int
  voteTransactionHash String?
  dataHash String?
  timestamp Int
  voteStatus Boolean
  transfer  Transfer?    @relation(fields: [transferId], references: [id])
  transferId  String     @db.ObjectId

  by String? @default("0x66547208290094373f020b53465D742Ca73333F6")
}
