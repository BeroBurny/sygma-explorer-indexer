{
  "name": "chainbridge-explorer-indexer",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start:dev": "nodemon",
    "start:prod": "node /build/index.js",
    "build": "tsc",
    "test": "dotenv -e .env.test jest -i",
    "copy-config-for-dev": "cp ./config/chainbridge-explorer-runtime-config.example.json ./public/chainbridge-explorer-runtime-config.json",
    "index:fetch": "ts-node src/indexer",
    "index:fetch:prod": "docker-compose -f docker-compose.full.yml run nodejs node build/indexer/index.js",
    "index:resetDB": "ts-node src/indexer/resetDB",
    "index:resetDB:prod": "docker-compose -f docker-compose.full.yml run nodejs node build/indexer/resetDB.js",
    "index:bootstrap": "yarn index:resetDB && yarn index:fetch",
    "start:mongo": "docker-compose -f docker-compose.only-mongo.yml up -d",
    "stop:mongo": "docker-compose -f docker-compose.only-mongo.yml down",
    "start:full": "docker-compose -f docker-compose.full.yml up -d",
    "start:stop": "docker-compose -f docker-compose.full.yml down",
    "build:nodejs:container": "docker-compose -f docker-compose.full.yml build nodejs"
  },
  "dependencies": {
    "@celo-tools/celo-ethers-wrapper": "^0.0.5",
    "@chainsafe/chainbridge-contracts": "^1.0.5",
    "@prisma/client": "^2.30.2",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "ethers": "^5.4.6",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.10",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^27.1.0",
    "nodemon": "^2.0.12",
    "prisma": "^2.30.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  }
}
